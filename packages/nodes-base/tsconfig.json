{
	"extends": [
		"@n8n/typescript-config/tsconfig.common.json",
		"@n8n/typescript-config/tsconfig.backend.json"
	],
	"compilerOptions": {
		"paths": {
			"@credentials/*": ["./credentials/*"],
			"@test/*": ["./test/*"],
			"@utils/*": ["./utils/*"],
			"@nodes-testing/*": ["../core/nodes-testing/*"]
		},
		"tsBuildInfoFile": "dist/typecheck.tsbuildinfo",

		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		// TODO: remove all options below this line
		"noImplicitReturns": false,
		"useUnknownInCatchVariables": false
	},
	"include": [
		"shims.d.ts",
		"credentials/**/*.ts",
		"nodes/**/*.ts",
		"nodes/**/*.json",
		"test/**/*.ts",
		"types/**/*.ts",
		"utils/**/*.ts",
		"types/**/*.ts",
		"../core/nodes-testing/**/*.ts",
		"../../node_modules/jest-expect-message/types/index.d.ts"
	],
	"references": [
		{ "path": "../@n8n/imap/tsconfig.build.json" },
		{ "path": "../workflow/tsconfig.build.esm.json" },
		{ "path": "../core/tsconfig.build.json" }
	]
}

run:
    uv run python -m src.main

sync:
    uv sync

lint:
    uv run ruff check

lintfix:
    uv run ruff check --fix

format:
    uv run ruff format

test:
    @echo "No tests yet"

typecheck:
    uv run ty check src/

# Fetch a grant token manually and start a task runner with it. For debugging only.
debug:
    GRANT_TOKEN=$(curl -s -X POST http://127.0.0.1:5679/runners/auth -H "Content-Type: application/json" -d '{"token":"test"}' | jq -r '.data.token') && N8N_RUNNERS_GRANT_TOKEN="$GRANT_TOKEN" just run
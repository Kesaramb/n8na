{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"strict": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipDefaultLibCheck": true
	},
	"include": ["src"]
}

{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/build.tsbuildinfo",
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"declaration": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/__tests__/**"]
}

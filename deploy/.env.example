# n8n General Settings
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
NODE_ENV=production
TZ=America/New_York
N8N_ENCRYPTION_KEY=your_strong_random_encryption_key_here # IMPORTANT: Generate a strong, unique key

# n8n Basic Authentication (set N8N_BASIC_AUTH_ACTIVE=false if using Supabase Auth exclusively later)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your_n8n_username
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# Supabase (PostgreSQL) Connection
# Find these details in your Supabase project settings
SUPABASE_HOST=your_supabase_db_host.supabase.co
SUPABASE_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_supabase_db_password
SUPABASE_DB_SSL=require # Recommended for Supabase

# Redis Cloud Connection
# Find these details in your Redis Cloud dashboard
REDIS_HOST=your_redis_host.rediscloud.com
REDIS_PORT=your_redis_port
REDIS_PASSWORD=your_redis_password

# Qdrant Configuration
# Set this if you configure an API key in Qdrant (see Qdrant documentation)
QDRANT_API_KEY= # Optional: your_qdrant_api_key

# SMTP (Email) Settings for n8n (e.g., for password resets, user invites)
# Replace with your actual SMTP provider details (e.g., SendGrid, Mailgun, or Gmail for testing)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SENDER=noreply@example.com
SMTP_SSL=true

# Embedding Service Configuration
# Port for the self-hosted embedding service container
EMBEDDING_PORT=8001
# The vectorai/sentence-transformers-fastapi image typically loads a default model.
# You can interact with its API to specify models if supported, or use its default.
# No specific API key is needed for the container itself, but secure its access if exposed publicly.

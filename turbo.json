{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		".env*",
		"pnpm-lock.yaml",
		"pnpm-workspace.yaml",
		"package.json",
		"turbo.json",
		"tsconfig.json",
		"eslint.config.*"
	],
	"tasks": {
		"clean": { 
			"cache": false 
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.json",
				"src/**/*.vue",
				"src/**/*.scss",
				"src/**/*.css",
				"assets/**/*",
				"public/**/*",
				"tsconfig*.json",
				"package.json",
				"*.config.*",
				"scripts/**/*"
			],
			"outputs": [
				"dist/**",
				"build/**",
				"lib/**",
				"types/**"
			],
			"cache": true,
			"persistent": false,
			"passThroughEnv": ["NODE_ENV", "CI"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.vue",
				"tsconfig*.json",
				"package.json"
			],
			"outputs": ["dist/**/*.tsbuildinfo"],
			"cache": true,
			"passThroughEnv": ["NODE_ENV"]
		},
		"format": {
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.vue",
				"src/**/*.json",
				"src/**/*.scss",
				"src/**/*.css",
				"biome.json",
				".prettierrc*"
			],
			"cache": true
		},
		"format:check": {
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.vue",
				"src/**/*.json",
				"src/**/*.scss",
				"src/**/*.css",
				"biome.json",
				".prettierrc*"
			],
			"cache": true
		},
		"lint": {
			"dependsOn": ["^build", "@n8n/eslint-config#build"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.vue",
				"test/**/*.ts",
				"test/**/*.js",
				"eslint.config.*",
				".eslintrc*",
				"package.json",
				"tsconfig*.json"
			],
			"cache": true,
			"passThroughEnv": ["NODE_ENV"]
		},
		"lint:fix": {
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"src/**/*.vue",
				"test/**/*.ts",
				"test/**/*.js",
				"eslint.config.*",
				".eslintrc*",
				"package.json",
				"tsconfig*.json"
			],
			"cache": false
		},
		"lint:styles": {
			"dependsOn": ["@n8n/stylelint-config#build"]
		},
		"lint:styles:fix": {
			"dependsOn": ["@n8n/stylelint-config#build"]
		},
		"test": {
			"dependsOn": ["^build", "build"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"test/**/*.ts",
				"test/**/*.js",
				"**/__tests__/**/*",
				"**/*.test.*",
				"**/*.spec.*",
				"jest.config.*",
				"package.json",
				"tsconfig*.json"
			],
			"outputs": [
				"coverage/**",
				"*.xml",
				"test-results/**"
			],
			"env": ["COVERAGE_ENABLED", "NODE_ENV"],
			"cache": true
		},
		"test:ci": {
			"dependsOn": ["^build", "build"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"test/**/*.ts",
				"test/**/*.js",
				"**/__tests__/**/*",
				"**/*.test.*",
				"**/*.spec.*",
				"jest.config.*",
				"package.json",
				"tsconfig*.json"
			],
			"outputs": [
				"coverage/**",
				"*.xml",
				"test-results/**"
			],
			"env": ["COVERAGE_ENABLED", "NODE_ENV", "CI"],
			"cache": true
		},
		"test:e2e": {
			"dependsOn": ["build"],
			"inputs": [
				"cypress/**/*",
				"playwright/**/*",
				"e2e/**/*",
				"test/**/*.e2e.*",
				"cypress.config.*",
				"playwright.config.*",
				"package.json"
			],
			"outputs": [
				"cypress/screenshots/**",
				"cypress/videos/**",
				"playwright-report/**",
				"test-results/**"
			],
			"env": ["NODE_ENV", "CI"],
			"cache": false
		},
		"watch": { 
			"cache": false, 
			"persistent": true 
		},
		"dev": { 
			"cache": false, 
			"persistent": true 
		},
		"build:playwright": {
			"dependsOn": ["install-browsers:ci", "build"],
			"inputs": [
				"src/**/*.ts",
				"src/**/*.js",
				"playwright/**/*",
				"package.json"
			],
			"outputs": ["dist/**"],
			"cache": true
		},
		"install-browsers:ci": {
			"inputs": ["package.json", "pnpm-lock.yaml"],
			"outputs": ["ms-playwright-cache/**"],
			"env": ["PLAYWRIGHT_BROWSERS_PATH"],
			"cache": true
		},
		"install-browsers:local": {
			"inputs": ["package.json", "pnpm-lock.yaml"],
			"cache": false
		},
		"test:container:standard": {
			"dependsOn": ["install-browsers:local"],
			"env": ["E2E_TESTS"],
			"cache": false
		},
		"test:standard": {
			"dependsOn": ["install-browsers:local"],
			"inputs": [
				"playwright/**/*",
				"e2e/**/*",
				"package.json"
			],
			"outputs": [
				"playwright-report/**",
				"test-results/**"
			],
			"cache": false
		},
		"validate:build": {
			"dependsOn": ["^build"],
			"inputs": [
				"scripts/build-validation.mjs",
				"scripts/health-check.mjs",
				"turbo.json",
				"package.json"
			],
			"outputs": [
				"build-validation-report.json", 
				"health-check-results.json"
			],
			"cache": true
		},
		"health:check": {
			"inputs": [
				"scripts/health-check.mjs",
				"package.json",
				"turbo.json"
			],
			"outputs": ["health-check-results.json"],
			"cache": true
		}
	}
}